---
interface Props {
  code?: string;
  language?: string;
  class?: string;
  'data-language'?: string;
}

const {
  code = '',
  language,
  class: className = '',
  'data-language': dataLanguage,
} = Astro.props;
const slotMarkup = await Astro.slots.render('default');
const formattedCode = code.trim();
const derivedLanguage =
  language ||
  dataLanguage ||
  (typeof className === 'string'
    ? className.match(/language-([\w-]+)/)?.[1]
    : undefined) ||
  'text';
const codeTargetId = `code-${Math.random().toString(36).slice(2, 8)}`;
---

<div class="code-block">
  <div class="code-block__header">
    <span class="text-base-content/60 text-xs tracking-[0.3em] uppercase">
      {derivedLanguage}
    </span>
    <button class="btn btn-ghost btn-xs" type="button" data-code-target={codeTargetId}>
      Copy
    </button>
  </div>
  <pre
    id={codeTargetId}
    tabindex="0">
    {
      slotMarkup?.trim() ? (
        <Fragment set:html={slotMarkup} />
      ) : (
        <code>{formattedCode}</code>
      )
    }
  </pre>
</div>

<script is:inline>
  document.addEventListener('click', (event) => {
    const button = event.target.closest('[data-code-target]');
    if (!button) return;
    const targetId = button.getAttribute('data-code-target');
    if (!targetId) return;
    const block = document.getElementById(targetId);
    if (!block) return;
    const text = block.innerText.trim();
    navigator.clipboard.writeText(text).then(() => {
      const original = button.textContent;
      button.textContent = 'Copied';
      button.setAttribute('aria-live', 'polite');
      setTimeout(() => {
        button.textContent = 'Copy';
        button.removeAttribute('aria-live');
      }, 1400);
    });
  });
</script>

<style>
  .code-block {
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1rem;
    overflow: hidden;
    margin: 1.5rem 0;
    background: rgba(15, 23, 42, 0.4);
  }

  .code-block__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
  }

  pre {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
    font-size: 0.9rem;
    line-height: 1.6;
    background: transparent;
  }

  pre:focus-visible {
    outline: 2px solid var(--theme-link);
    outline-offset: 2px;
  }
</style>
