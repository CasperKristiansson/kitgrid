---
import codeBlockScript from '../scripts/code-block.ts?url';

interface Props {
  code?: string;
  language?: string;
  class?: string;
  'data-language'?: string;
}

const {
  code = '',
  language,
  class: className = '',
  'data-language': dataLanguage,
} = Astro.props;
const slotMarkup = await Astro.slots.render('default');
const formattedCode = code.trim();
const derivedLanguage =
  language ||
  dataLanguage ||
  (typeof className === 'string'
    ? className.match(/language-([\w-]+)/)?.[1]
    : undefined) ||
  'text';
const codeTargetId = `code-${Math.random().toString(36).slice(2, 8)}`;
---

<div class="code-block" data-code-block>
  <div class="code-block__header">
    <div class="code-block__meta" aria-hidden="true">
      <span class="code-block__dot" data-variant="red"></span>
      <span class="code-block__dot" data-variant="amber"></span>
      <span class="code-block__dot" data-variant="green"></span>
      <span class="code-block__lang">{derivedLanguage}</span>
    </div>
    <button class="code-block__copy" type="button" data-code-copy data-copy-state="idle">
      Copy
    </button>
  </div>
  <pre
    id={codeTargetId}
    tabindex="0"
    data-code-target>
    {
      slotMarkup?.trim() ? (
        <Fragment set:html={slotMarkup} />
      ) : (
        <code>{formattedCode}</code>
      )
    }
  </pre>
</div>

<script type="module" src={codeBlockScript} />

<style>
  .code-block {
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1.2rem;
    overflow: hidden;
    margin: 1.5rem 0;
    background: linear-gradient(135deg, rgba(13, 148, 136, 0.15), rgba(10, 15, 21, 0.9));
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.45);
  }

  .code-block__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.75rem 1.2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(0, 0, 0, 0.2);
  }

  .code-block__meta {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.7rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.65);
  }

  .code-block__dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.3);
  }

  .code-block__dot[data-variant='red'] {
    background: #f87171;
  }

  .code-block__dot[data-variant='amber'] {
    background: #facc15;
  }

  .code-block__dot[data-variant='green'] {
    background: #34d399;
  }

  .code-block__lang {
    margin-left: 0.75rem;
  }

  .code-block__copy {
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 999px;
    padding: 0.2rem 0.9rem;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    background: rgba(255, 255, 255, 0.05);
    color: var(--theme-text);
    cursor: pointer;
    transition: border-color 150ms ease, background 150ms ease;
  }

  .code-block__copy:hover,
  .code-block__copy:focus-visible {
    border-color: var(--theme-link);
    background: rgba(255, 255, 255, 0.12);
  }

  .code-block__copy[data-copy-state='copied'] {
    border-color: rgba(34, 197, 94, 0.8);
    color: #bbf7d0;
  }

  pre {
    margin: 0;
    padding: 1.25rem 1.5rem;
    overflow-x: auto;
    font-size: 0.9rem;
    line-height: 1.6;
    background: transparent;
    font-family: var(--font-mono, 'JetBrains Mono'), 'SFMono-Regular', Menlo, Consolas, monospace;
    color: #e5f4f1;
  }

  pre:focus-visible {
    outline: 2px solid var(--theme-link);
    outline-offset: 2px;
  }
</style>
