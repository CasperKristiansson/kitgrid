---
import DocsSearch from './DocsSearch.astro';

interface NavLink {
  label: string;
  href: string;
}

interface Props {
  logoSrc: string;
  logoAlt?: string;
  title: string;
  links: NavLink[];
  repoUrl?: string;
  homeHref?: string;
  searchRemoteSrc?: string;
}

const {
  logoSrc,
  logoAlt = 'Project logo',
  title,
  links = [],
  repoUrl,
  homeHref = '/',
  searchRemoteSrc,
} = Astro.props;
---

<header class="docs-nav" role="banner">
  <div class="docs-nav__inner">
    <a class="docs-nav__brand" href={homeHref}>
      <img
        class="docs-nav__logo"
        src={logoSrc}
        width="40"
        height="40"
        alt={logoAlt}
        loading="lazy"
        decoding="async"
      />
      <span class="docs-nav__title">{title}</span>
    </a>

    <nav aria-label="Primary" class="docs-nav__links">
      {links.map((link) => (
        <a class="docs-nav__link" href={link.href}>
          {link.label}
        </a>
      ))}
      {repoUrl && (
        <a class="docs-nav__link docs-nav__link--repo" href={repoUrl} target="_blank" rel="noreferrer">
          GitHub â†—
        </a>
      )}
    </nav>

    <div class="docs-nav__search">
      <DocsSearch remoteSrc={searchRemoteSrc} />
    </div>

    <button class="docs-nav__menu-button" type="button" data-sidebar-toggle aria-label="Toggle navigation">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<style>
  .docs-nav {
    position: fixed;
    top: 0;
    z-index: 30;
    background: rgba(255, 255, 255, 0.95);
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
    backdrop-filter: blur(8px);
    width: 100%;
  }

  .docs-nav__inner {
    margin: 0 auto;
    padding: 1rem clamp(1rem, 4vw, 2.5rem);
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .docs-nav__brand {
    display: inline-flex;
    align-items: center;
    gap: 0.65rem;
    text-decoration: none;
    color: inherit;
    font-weight: 600;
    letter-spacing: 0.01em;
    width: 320px;
  }

  @media (max-width: 1024px) {
    .docs-nav__brand {
      width: auto;
    }
  }

  .docs-nav__logo {
    display: block;
    width: 40px;
    height: 40px;
    border-radius: 12px;
    border: 1px solid rgba(15, 23, 42, 0.1);
    background: #fff;
    padding: 4px;
    object-fit: contain;
    box-shadow: 0 6px 16px rgba(15, 23, 42, 0.12);
  }

  .docs-nav__title {
    font-size: 1rem;
  }

  .docs-nav__links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: auto;
    margin-right: auto;
    justify-content: center;
  }

  .docs-nav__link {
    font-size: 0.9rem;
    color: rgba(15, 23, 42, 0.8);
    text-decoration: none;
    padding: 0.35rem 0.5rem;
    border-radius: 0.65rem;
    transition: color 150ms ease, background 150ms ease;
  }

  .docs-nav__link:hover,
  .docs-nav__link:focus-visible {
    color: #1d4ed8;
    background: rgba(29, 78, 216, 0.08);
  }

  .docs-nav__link--repo {
    font-weight: 600;
  }

  .docs-nav__search {
    flex: 1 1 320px;
    max-width: 380px;
    transition:
      flex-basis 200ms ease,
      max-width 200ms ease;
  }

  .docs-nav__search:focus-within {
    flex-basis: 720px;
    max-width: min(720px, 100%);
  }

  .docs-nav__menu-button {
    display: none;
    width: 44px;
    height: 44px;
    border-radius: 0.85rem;
    border: 1px solid rgba(15, 23, 42, 0.1);
    background: #ffffff;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 0.25rem;
    cursor: pointer;
  }

  .docs-nav__menu-button span {
    display: block;
    width: 18px;
    height: 2px;
    background: rgba(15, 23, 42, 0.85);
  }

  @media (max-width: 1024px) {
    .docs-nav__inner {
      flex-wrap: wrap;
      gap: 0.75rem 1rem;
    }

    .docs-nav__links {
      display: none;
    }

    .docs-nav__search {
      display: none;
    }

    .docs-nav__menu-button {
      display: inline-flex;
      margin-left: auto;
    }
  }
</style>
