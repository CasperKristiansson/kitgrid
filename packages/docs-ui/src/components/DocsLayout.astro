---
import DocsSidebarNav from './DocsSidebarNav.astro';
import DocsToc from './DocsToc.astro';
import codeCopyScript from '../scripts/code-copy.ts?url';
import type { DocsNavItem } from '../types';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  navItems: DocsNavItem[];
  headings?: Heading[];
  title: string;
  description?: string;
  editHref?: string;
  versionLabel?: string;
}

const {
  navItems = [],
  headings = [],
  title,
  description,
  editHref,
  versionLabel = 'latest',
} = Astro.props;
---

<section class="docs-layout">
  <aside class="docs-layout__sidebar">
    <DocsSidebarNav items={navItems} />
  </aside>
  <article class="docs-layout__content">
    <header class="docs-layout__header">
      <div class="space-y-2">
        <p class="pill">Documentation</p>
        <h1 class="text-3xl font-semibold">{title}</h1>
        {description && <p class="text-base-content/70">{description}</p>}
      </div>
      <div class="docs-layout__meta" aria-label="Doc actions">
        <slot name="version">
          <span class="badge badge-outline text-xs tracking-[0.3em] uppercase">
            {versionLabel}
          </span>
        </slot>
      </div>
    </header>
    <slot />
    {
      editHref && (
        <a class="docs-layout__edit" href={editHref} target="_blank" rel="noreferrer">
          Edit this page
        </a>
      )
    }
  </article>
  <aside class="docs-layout__toc">
    <DocsToc headings={headings} />
  </aside>
</section>

<style>
  .docs-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 260px;
    max-width: 1220px;
    margin-left: 320px;
    padding: clamp(1rem, 3vw, 2.5rem) 0 4rem;
  }

  .docs-layout__sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 320px;
    height: 100vh;
    padding: 5.5rem 0 2rem;
    border-right: 1px solid rgba(15, 23, 42, 0.12);
    background: var(--theme-bg);
    overflow-y: auto;
  }

  .docs-layout__header {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem 2rem;
    margin-bottom: 2rem;
  }

  .docs-layout__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-height: 2.5rem;
  }

  .docs-layout__content {
    padding-bottom: 4rem;
  }

  .docs-layout__content :global(h2) {
    margin-top: 2.5rem;
    font-size: 1.6rem;
    scroll-margin-top: 120px;
  }

  .docs-layout__content :global(h3) {
    margin-top: 1.5rem;
    font-size: 1.2rem;
    scroll-margin-top: 120px;
  }

  .docs-layout__content :global(a:not(.btn)) {
    color: var(--theme-link);
  }

  .docs-layout__toc {
    position: sticky;
    top: 37px;
    height: calc(100vh - 6rem);
    padding-left: 1.5rem;
    border-left: 1px solid rgba(15, 23, 42, 0.12);
    overflow-y: auto;
  }

  .docs-layout__edit {
    display: inline-flex;
    margin-top: 2rem;
    font-size: 0.85rem;
    color: var(--theme-link);
    text-decoration: none;
    gap: 0.35rem;
    align-items: center;
  }

  .docs-layout__edit::after {
    content: 'â†—';
    font-size: 0.8rem;
  }

  @media (max-width: 1024px) {
    .docs-layout {
      grid-template-columns: minmax(0, 1fr);
      margin-left: 0;
      padding-top: 6rem;
    }

    .docs-layout__sidebar {
      position: static;
      width: 100%;
      height: auto;
      border-right: none;
      border-bottom: 1px solid rgba(15, 23, 42, 0.12);
      padding-bottom: 1rem;
      margin-bottom: 1rem;
    }

    .docs-layout__toc {
      display: none;
    }

    .docs-layout__meta {
      width: 100%;
      justify-content: flex-start;
      flex-wrap: wrap;
    }
  }

  :global(.code-block) {
    position: relative;
    margin: 2rem 0;
    padding: 2.5rem 1.5rem 1.5rem;
    border-radius: 18px;
    width: 100%;
  }

  :global(.code-block pre) {
    margin: 0;
  }

  :global(.code-block [data-code-copy]) {
    position: absolute;
    top: 0.85rem;
    right: 0.85rem;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 999px;
    border: 1px solid rgba(15, 23, 42, 0.14);
    background: rgba(255, 255, 255, 0.9);
    color: rgba(15, 23, 42, 0.55);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition:
      color 160ms ease,
      border-color 160ms ease,
      background 160ms ease,
      transform 160ms ease;
  }

  :global(.code-block [data-code-copy]:hover),
  :global(.code-block [data-code-copy]:focus-visible) {
    color: var(--theme-text);
    border-color: rgba(15, 23, 42, 0.3);
    transform: translateY(-1px);
  }

  :global(.code-block [data-code-copy][data-copy-state='copied']) {
    color: var(--theme-primary);
    border-color: rgba(29, 78, 216, 0.4);
  }

  :global(.docs-list) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
    list-style: disc;
  }

  :global(.docs-list li) {
    line-height: 1.6;
  }

  :global(.docs-list li + li) {
    margin-top: 0.35rem;
  }
</style>

<script type="module" src={codeCopyScript} />
