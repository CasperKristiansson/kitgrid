---
import DocsSidebarNav from './DocsSidebarNav.astro';
import DocsToc from './DocsToc.astro';
import codeCopyScript from '../scripts/code-copy.js?url';
import type { DocsNavItem } from '../types';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  navItems: DocsNavItem[];
  headings?: Heading[];
  title: string;
  description?: string;
  editHref?: string;
  versionLabel?: string;
}

const {
  navItems = [],
  headings = [],
  title,
  description,
  editHref,
  versionLabel = 'latest',
} = Astro.props;
const currentPath = Astro.url?.pathname ?? '/';
---

<section class="docs-layout">
  <div class="docs-layout__overlay" data-sidebar-dismiss></div>
  <aside class="docs-layout__sidebar" data-sidebar-panel>
    <button class="docs-sidebar__close" type="button" data-sidebar-dismiss aria-label="Close navigation">
      ✕
    </button>
    <DocsSidebarNav items={navItems} currentPath={currentPath} />
  </aside>
  <article class="docs-layout__content">
    <header class="docs-layout__header">
      <div class="space-y-2">
        <p class="pill">Documentation</p>
        <h1 class="text-3xl font-semibold">{title}</h1>
        {description && <p class="text-base-content/70">{description}</p>}
      </div>
      <div class="docs-layout__meta" aria-label="Doc actions">
        <slot name="version">
          <span class="badge badge-outline text-xs tracking-[0.3em] uppercase">
            {versionLabel}
          </span>
        </slot>
      </div>
    </header>
    <slot />
    {
      editHref && (
        <a class="docs-layout__edit" href={editHref} target="_blank" rel="noreferrer">
          Edit this page
        </a>
      )
    }
  </article>
  <aside class="docs-layout__toc">
    <DocsToc headings={headings} />
  </aside>
</section>

<style>
  .docs-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 260px;
    max-width: 1220px;
    margin-left: 320px;
    padding: 2rem 0 4rem;
  }

  .docs-layout__overlay {
    display: none;
  }

  .docs-layout__sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 320px;
    height: 100vh;
    padding: 5.5rem 0 2rem;
    border-right: 1px solid rgba(15, 23, 42, 0.12);
    background: var(--theme-bg);
    overflow-y: auto;
  }

  .docs-sidebar__close {
    display: none;
  }

  .docs-layout__header {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem 2rem;
    margin-bottom: 2rem;
  }

  .docs-layout__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-height: 2.5rem;
  }

  .docs-layout__content {
    padding-bottom: 4rem;
  }

  .docs-layout__content :global(h2) {
    margin-top: 2.5rem;
    font-size: 1.6rem;
    scroll-margin-top: 120px;
  }

  .docs-layout__content :global(h3) {
    margin-top: 1.5rem;
    font-size: 1.2rem;
    scroll-margin-top: 120px;
  }

  .docs-layout__content :global(a:not(.btn)) {
    color: var(--theme-link);
    text-decoration: underline transparent;
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
    transition: text-decoration-color 150ms ease;
  }

  .docs-layout__content :global(a:not(.btn):hover),
  .docs-layout__content :global(a:not(.btn):focus-visible) {
    text-decoration-color: currentColor;
  }

  .docs-layout__content :global(hr) {
    margin: 3rem 0;
    border: none;
    border-top: 1px solid rgba(15, 23, 42, 0.12);
  }

  .docs-layout__toc {
    position: sticky;
    top: 37px;
    height: calc(100vh - 6rem);
    padding-left: 1.5rem;
    border-left: 1px solid rgba(15, 23, 42, 0.12);
    overflow-y: auto;
  }

  .docs-layout__edit {
    display: inline-flex;
    margin-top: 2rem;
    font-size: 0.85rem;
    color: var(--theme-link);
    text-decoration: none;
    gap: 0.35rem;
    align-items: center;
  }

  .docs-layout__edit::after {
    content: '↗';
    font-size: 0.8rem;
  }

  @media (max-width: 1024px) {
    .docs-layout {
      grid-template-columns: minmax(0, 1fr);
      margin-left: 0;
    }

    .docs-layout__sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: min(80vw, 360px);
      height: 100vh;
      border-right: 1px solid rgba(15, 23, 42, 0.12);
      border-bottom: none;
      padding: 4.5rem 1rem 2rem;
      margin: 0;
      transform: translateX(-100%);
      transition: transform 200ms ease;
      z-index: 50;
      background: var(--theme-bg);
    }

    .docs-sidebar__close {
      display: inline-flex;
      position: absolute;
      top: 1.25rem;
      right: 1rem;
      width: 36px;
      height: 36px;
      border-radius: 999px;
      border: 1px solid rgba(15, 23, 42, 0.15);
      background: rgba(255, 255, 255, 0.85);
      align-items: center;
      justify-content: center;
      font-size: 1rem;
      cursor: pointer;
    }

    :global(.pf-sidebar-open) .docs-layout__sidebar {
      transform: translateX(0);
    }

    .docs-layout__overlay {
      display: none;
    }

    :global(.pf-sidebar-open) .docs-layout__overlay {
      display: block;
      position: fixed;
      inset: 0;
      background: rgba(5, 8, 15, 0.45);
      backdrop-filter: blur(2px);
      z-index: 45;
    }

    .docs-layout__meta {
      width: 100%;
      justify-content: flex-start;
      flex-wrap: wrap;
    }

    :global(.docs-layout__sidebar .nav-group),
    :global(.docs-layout__sidebar .nav-children) {
      border: none;
    }

    .docs-layout__toc {
      display: none;
    }
  }

  :global(.code-block) {
    position: relative;
    margin: 2rem 0;
    padding: 2.5rem 1.5rem 1.5rem;
    border-radius: 18px;
    width: 100%;
  }

  :global(.code-block pre) {
    margin: 0;
  }

  :global(.code-block [data-code-copy]) {
    position: absolute;
    top: 0.85rem;
    right: 0.85rem;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 999px;
    border: 1px solid rgba(15, 23, 42, 0.14);
    background: rgba(255, 255, 255, 0.9);
    color: rgba(15, 23, 42, 0.55);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition:
      color 160ms ease,
      border-color 160ms ease,
      background 160ms ease,
      transform 160ms ease;
  }

  :global(.code-block [data-code-copy]:hover),
  :global(.code-block [data-code-copy]:focus-visible) {
    color: var(--theme-text);
    border-color: rgba(15, 23, 42, 0.3);
    transform: translateY(-1px);
  }

  :global(.code-block [data-code-copy][data-copy-state='copied']) {
    color: var(--theme-primary);
    border-color: rgba(29, 78, 216, 0.4);
  }

  :global(.docs-list) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
    list-style: disc;
  }

  :global(.docs-list li) {
    line-height: 1.6;
  }

  :global(.docs-list li + li) {
    margin-top: 0.35rem;
  }

  :global(.docs-table) {
    width: 100%;
    margin: 1.5rem 0;
    border: 1px solid rgba(15, 23, 42, 0.1);
    border-radius: 1rem;
    overflow-x: auto;
    background: rgba(255, 255, 255, 0.65);
  }

  :global(.docs-table table) {
    width: 100%;
    border-collapse: collapse;
    min-width: 500px;
  }

  :global(.docs-table th),
  :global(.docs-table td) {
    padding: 0.85rem 1rem;
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
    font-size: 0.95rem;
  }

  :global(.docs-table th) {
    font-weight: 600;
    color: var(--theme-text);
    background: rgba(15, 23, 42, 0.04);
  }

  :global(.docs-table tr:last-child td) {
    border-bottom: none;
  }

  :global(.docs-table code) {
    font-size: 0.9em;
  }
</style>

<script type="module" src={codeCopyScript} />
