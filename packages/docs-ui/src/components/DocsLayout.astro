---
import DocsSidebarNav from './DocsSidebarNav.astro';
import DocsToc from './DocsToc.astro';
import DocsSearch from './DocsSearch.astro';
import type { DocsNavItem } from '../types';

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  navItems: DocsNavItem[];
  headings?: Heading[];
  title: string;
  description?: string;
  editHref?: string;
  versionLabel?: string;
}

const {
  navItems = [],
  headings = [],
  title,
  description,
  editHref,
  versionLabel = 'latest',
} = Astro.props;
---

<section class="docs-layout">
  <div class="docs-layout__search" role="search">
    <slot name="search">
      <DocsSearch />
    </slot>
  </div>
  <aside class="docs-layout__sidebar">
    <DocsSidebarNav items={navItems} />
  </aside>
  <article class="docs-layout__content">
    <header class="docs-layout__header">
      <div class="space-y-2">
        <p class="pill">Documentation</p>
        <h1 class="text-3xl font-semibold">{title}</h1>
        {description && <p class="text-base-content/70">{description}</p>}
      </div>
      <div class="docs-layout__meta" aria-label="Doc actions">
        <slot name="version">
          <span class="badge badge-outline text-xs tracking-[0.3em] uppercase">
            {versionLabel}
          </span>
        </slot>
      </div>
    </header>
    <slot />
    {
      editHref && (
        <a class="docs-layout__edit" href={editHref} target="_blank" rel="noreferrer">
          Edit this page
        </a>
      )
    }
  </article>
  <aside class="docs-layout__toc">
    <DocsToc headings={headings} />
  </aside>
</section>

<style>
  .docs-layout {
    display: grid;
    grid-template-columns: 260px minmax(0, 1fr) 260px;
    gap: clamp(1.5rem, 3vw, 3rem);
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 3rem) 4rem;
  }

  .docs-layout__search {
    grid-column: 1 / -1;
    display: flex;
    justify-content: center;
    padding-top: clamp(2rem, 4vw, 4rem);
  }

  .docs-layout__sidebar {
    border-right: 1px solid rgba(255, 255, 255, 0.08);
    padding-right: 1.25rem;
    padding-left: 0.5rem;
    min-height: 0;
  }

  .docs-layout__header {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem 2rem;
    margin-bottom: 2rem;
  }

  .docs-layout__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-height: 2.5rem;
  }

  .docs-layout__content {
    padding-bottom: 4rem;
  }

  .docs-layout__content :global(h2) {
    margin-top: 2.5rem;
    font-size: 1.6rem;
    scroll-margin-top: 120px;
  }

  .docs-layout__content :global(h3) {
    margin-top: 1.5rem;
    font-size: 1.2rem;
    scroll-margin-top: 120px;
  }

  .docs-layout__content :global(a:not(.btn)) {
    color: var(--theme-link);
  }

  .docs-layout__toc {
    font-size: 0.85rem;
  }

  .docs-layout__edit {
    display: inline-flex;
    margin-top: 2rem;
    font-size: 0.85rem;
    color: var(--theme-link);
    text-decoration: none;
    gap: 0.35rem;
    align-items: center;
  }

  .docs-layout__edit::after {
    content: 'â†—';
    font-size: 0.8rem;
  }

  @media (max-width: 1024px) {
    .docs-layout {
      grid-template-columns: minmax(0, 1fr);
    }

    .docs-layout__search {
      padding-top: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .docs-layout__sidebar {
      border-right: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      padding-bottom: 1rem;
      margin-bottom: 1rem;
    }

    .docs-layout__toc {
      display: none;
    }

    .docs-layout__meta {
      width: 100%;
      justify-content: flex-start;
      flex-wrap: wrap;
    }
  }
</style>
