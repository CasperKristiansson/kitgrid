---
import docsSearchScript from '../scripts/docs-search.js?url';

interface Props {
  remoteSrc?: string;
}

const { remoteSrc } = Astro.props as Props;
---

<div class="docs-search" data-docs-search data-docs-search-remote={remoteSrc ?? undefined}>
  <label class="docs-search__field">
    <span class="sr-only">Search docs</span>
    <svg
      aria-hidden="true"
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    <input
      type="search"
      placeholder="Search docs"
      aria-label="Search docs"
      data-docs-search-input
      autocomplete="off"
    />
    <span class="docs-search__shortcut" data-docs-search-shortcut aria-hidden="true">
      âŒ˜ K
    </span>
  </label>
  <p
    class="docs-search__status sr-only"
    data-docs-search-status
    hidden
    aria-live="polite"
  ></p>
  <div class="docs-search__results" data-docs-search-results hidden>
    <ul></ul>
  </div>
</div>

<style>
  .docs-search {
    position: relative;
    width: 100%;
    max-width: 380px;
    transition: max-width 200ms ease;
  }

  .docs-search:focus-within {
    max-width: min(720px, 100vw - 160px);
  }

  .docs-search:focus-within .docs-search__results {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }

  .docs-search__field {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    border-radius: 16px;
    padding: 0.85rem 1.2rem;
    font-size: 0.92rem;
    color: var(--theme-muted);
    background: #fff;
    border: 1px solid rgba(15, 23, 42, 0.12);
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
  }

  .docs-search__field input {
    flex: 1;
    background: transparent;
    border: none;
    color: inherit;
    font: inherit;
  }

  .docs-search__field input:focus {
    outline: none;
    color: var(--theme-text);
  }

  .docs-search__shortcut {
    font-size: 0.8rem;
    color: var(--theme-muted);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.5rem;
    padding: 0.2rem 0.5rem;
    letter-spacing: 0.05em;
  }

  .docs-search__status {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .docs-search__results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.4rem;
    border-radius: 1rem;
    background: #fff;
    border: 1px solid rgba(15, 23, 42, 0.12);
    padding: 0.85rem;
    box-shadow:
      0 12px 25px rgba(15, 23, 42, 0.12),
      0 4px 12px rgba(15, 23, 42, 0.08);
    z-index: 200;
    max-height: 420px;
    overflow-y: auto;
    opacity: 0;
    pointer-events: none;
    transform: translateY(-6px);
    transition:
      opacity 150ms ease,
      transform 150ms ease;
  }

  .docs-search__results ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .docs-search__results a {
    display: block;
    color: rgba(15, 23, 42, 0.9);
    text-decoration: none;
    font-weight: 500;
  }

  :global(.docs-search__result-title) {
    display: block;
    font-size: 1.05rem;
    font-weight: 600;
    color: rgba(15, 23, 42, 0.98);
  }

  :global(.docs-search__result-label) {
    display: block;
    margin-top: 0.2rem;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(100, 116, 139, 0.95);
  }

  :global(.docs-search__result-excerpt) {
    display: block;
    margin-top: 0.35rem;
    font-size: 0.85rem;
    color: rgba(71, 85, 105, 0.95);
    line-height: 1.35;
    overflow: hidden;
  }

  :global(.docs-search__result-excerpt mark) {
    background: rgba(221, 243, 255, 0.9);
    color: #0f172a;
    border-radius: 3px;
    padding: 0 0.1rem;
  }

  .docs-search__results a:hover,
  .docs-search__results a:focus-visible {
    color: #1d4ed8;
    text-decoration: underline;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>


<script type="module" src={docsSearchScript} />
