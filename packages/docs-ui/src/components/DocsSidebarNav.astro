---
import type { DocsNavItem } from '../types';

interface Props {
  items: DocsNavItem[];
}

const { items = [] } = Astro.props;
---

<nav class="docs-nav" aria-label="Docs sections">
  <ul>
    {
      items.map((item) => (
        <li>
          <a href={item.href} class="nav-link">
            {item.title}
          </a>
          {item.children?.length ? (
            <ul>
              {item.children.map((child) => (
                <li>
                  <a href={child.href} class="nav-link nav-link-child">
                    {child.title}
                  </a>
                </li>
              ))}
            </ul>
          ) : null}
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .docs-nav {
    position: sticky;
    top: 6rem;
    max-height: calc(100vh - 6rem);
    overflow-y: auto;
    padding: 1.25rem 1rem 1.25rem 1.5rem;
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    background: radial-gradient(circle at top, rgba(45, 212, 191, 0.14), transparent 55%),
      rgba(10, 15, 20, 0.45);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.35);
  }

  .docs-nav ul {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .docs-nav > ul > li {
    padding: 0.15rem 0;
  }

  .docs-nav ul ul {
    margin-top: 0.35rem;
    border-left: 1px solid rgba(255, 255, 255, 0.08);
    padding-left: 1rem;
    gap: 0.35rem;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--theme-text);
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    text-decoration: none;
    padding: 0.15rem 0;
    transition:
      color 140ms ease,
      transform 140ms ease;
    position: relative;
  }

  .nav-link:hover,
  .nav-link:focus-visible {
    color: var(--theme-link);
    transform: translateX(2px);
  }

  .nav-link-child {
    color: var(--theme-muted);
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0;
  }

  .nav-link::before {
    content: '';
    width: 6px;
    height: 6px;
    border-radius: 999px;
    background: var(--theme-link);
    opacity: 0;
    transform: scale(0.5);
    transition: opacity 140ms ease, transform 140ms ease;
  }

  .nav-link:hover::before,
  .nav-link:focus-visible::before {
    opacity: 1;
    transform: scale(1);
  }

  @media (max-width: 1024px) {
    .docs-nav {
      position: static;
      max-height: none;
      padding: 1rem;
      border-radius: 1rem;
      background: rgba(15, 22, 34, 0.7);
    }
  }
</style>
