---
import type { DocsNavItem } from '../types';
import DocsSidebarTree from './DocsSidebarTree.astro';

interface Props {
  items: DocsNavItem[];
  currentPath?: string;
}

const normalizePath = (value?: string) => {
  if (!value) return '/';
  try {
    const [path] = value.split(/[?#]/);
    const trimmed = path.replace(/\/+$/, '');
    return trimmed || '/';
  } catch {
    return '/';
  }
};

const { items = [], currentPath = '' } = Astro.props;
const activePath = normalizePath(currentPath);
---

<nav class="docs-nav" aria-label="Docs sections">
  <div class="nav-groups">
    <DocsSidebarTree items={items} activePath={activePath} />
  </div>
</nav>

<style>
  :global(.docs-nav) {
    position: sticky;
    overflow-y: auto;
    overflow-x: hidden;
  }

  :global(.nav-groups) {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  :global(.nav-group) {
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
    padding-bottom: 0.6rem;
  }

  :global(.nav-group:last-child) {
    border-bottom: none;
  }

  :global(.nav-group > summary) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    cursor: pointer;
    list-style: none;
    padding-right: 0.5rem;
    width: 100%;
    box-sizing: border-box;
  }

  :global(.nav-group > summary::-webkit-details-marker) {
    display: none;
  }

  :global(.nav-group__chevron) {
    font-size: 0.65rem;
    color: rgba(15, 23, 42, 0.4);
    transition: transform 150ms ease;
  }

  :global(.nav-group[open] .nav-group__chevron) {
    transform: rotate(180deg);
  }

  :global(.nav-group--single) {
    border-bottom: none;
  }

  :global(.nav-group--nested) {
    border-bottom: none;
    padding-bottom: 0.4rem;
  }

  :global(.nav-children) {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    border-left: 1px solid rgba(15, 23, 42, 0.12);
    margin-top: 0.4rem;
    padding-left: 0.85rem;
  }

  :global(.nav-link) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--theme-text);
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    text-decoration: none;
    padding: 0.35rem 0.65rem;
    border-radius: 0.85rem;
    transition:
      color 150ms ease,
      background 150ms ease,
      transform 150ms ease;
    width: 100%;
    box-sizing: border-box;
  }

  :global(.nav-link:hover),
  :global(.nav-link:focus-visible) {
    color: var(--theme-link);
    background: rgba(29, 78, 216, 0.08);
    transform: translateX(2px);
  }

  :global(.nav-link[aria-current='page']) {
    background: rgba(29, 78, 216, 0.16);
    color: var(--theme-link);
  }

  :global(.nav-link-child) {
    color: var(--theme-muted);
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0;
  }

  @media (max-width: 1024px) {
    :global(.docs-nav) {
      position: static;
      max-height: none;
      padding: 0.5rem 0;
    }
  }
</style>
