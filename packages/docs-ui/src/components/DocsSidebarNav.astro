---
import type { DocsNavItem } from '../types';

interface Props {
  items: DocsNavItem[];
}

const { items = [] } = Astro.props;
---

<nav class="docs-nav" aria-label="Docs sections">
  <div class="nav-groups">
    {
      items.map((item) => (
        item.children?.length ? (
          <details class="nav-group" open>
            <summary>
              <a href={item.href} class="nav-link">
                {item.title}
              </a>
              <svg
                class="nav-group__chevron"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <polyline points="6 9 12 15 18 9" />
              </svg>
            </summary>
            <div class="nav-children">
              {item.children.map((child) => (
                <a href={child.href} class="nav-link nav-link-child">
                  {child.title}
                </a>
              ))}
            </div>
          </details>
        ) : (
          <div class="nav-group nav-group--single">
            <a href={item.href} class="nav-link">
              {item.title}
            </a>
          </div>
        )
      ))
    }
  </div>
</nav>

<style>
  .docs-nav {
    position: sticky;
    overflow-y: auto;
  }

  .nav-groups {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-group {
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
    padding-bottom: 0.6rem;
  }

  .nav-group:last-child {
    border-bottom: none;
  }

  .nav-group > summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    cursor: pointer;
    list-style: none;
    padding-right: 0.5rem;
  }

  .nav-group > summary::-webkit-details-marker {
    display: none;
  }

  .nav-group__chevron {
    font-size: 0.65rem;
    color: rgba(15, 23, 42, 0.4);
    transition: transform 150ms ease;
  }

  .nav-group[open] .nav-group__chevron {
    transform: rotate(180deg);
  }

  .nav-group--single {
    border-bottom: none;
  }

  .nav-children {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    border-left: 1px solid rgba(15, 23, 42, 0.12);
    margin-top: 0.4rem;
    padding-left: 0.85rem;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--theme-text);
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    text-decoration: none;
    padding: 0.2rem 0.3rem;
    border-radius: 0.75rem;
    transition:
      color 140ms ease,
      transform 140ms ease,
      background 140ms ease;
    position: relative;
  }

  .nav-link:hover,
  .nav-link:focus-visible {
    color: var(--theme-link);
    transform: translateX(2px);
  }

  .nav-link[aria-current='page'] {
    background: rgba(29, 78, 216, 0.12);
    color: var(--theme-link);
  }

  .nav-link-child {
    color: var(--theme-muted);
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0;
  }

  .nav-link::before {
    content: '';
    width: 6px;
    height: 6px;
    border-radius: 999px;
    background: var(--theme-link);
    opacity: 0;
    transform: scale(0.5);
    transition: opacity 140ms ease, transform 140ms ease;
  }

  .nav-link:hover::before,
  .nav-link:focus-visible::before {
    opacity: 1;
    transform: scale(1);
  }

  @media (max-width: 1024px) {
    .docs-nav {
      position: static;
      max-height: none;
      padding: 0.5rem 0;
    }
  }
</style>
