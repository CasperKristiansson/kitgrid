---
import type { ProjectMeta } from '../data/projects';

interface Props {
  project: ProjectMeta;
}

const { project } = Astro.props;
const statusLabel: Record<ProjectMeta['status'], string> = {
  live: 'Live',
  'in-progress': 'In progress',
  design: 'Design',
};
const subdomain = `https://${project.id}.kitgrid.dev`;
const isLive = project.status === 'live';
---

<article class="project-card" aria-labelledby={`project-${project.id}`}>
  <header class="project-card__header">
    <span class={`status status--${project.status}`}>{statusLabel[project.status]}</span>
    <p class="project-repo">{project.repo}</p>
  </header>
  <div class="project-card__body">
    <h3 id={`project-${project.id}`}>{project.name}</h3>
    <p>{project.description}</p>
  </div>
  <footer class="project-card__footer">
    <a
      class={`project-link ${!isLive ? 'project-link--disabled' : ''}`}
      href={isLive ? subdomain : (project.docsUrl ?? '#')}
      aria-disabled={!isLive ? 'true' : undefined}
      target="_blank"
      rel="noreferrer"
    >
      Visit docs â†—
    </a>
  </footer>
</article>

<style>
  .project-card {
    border: 1px solid var(--color-card-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    min-height: 260px;
  }

  .project-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .project-repo {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-muted);
  }

  .status {
    display: inline-flex;
    padding: 0.2rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .status--live {
    background: rgba(110, 231, 249, 0.15);
    color: var(--color-accent);
  }

  .status--in-progress {
    background: rgba(96, 165, 250, 0.15);
    color: var(--color-accent-strong);
  }

  .status--design {
    background: rgba(255, 255, 255, 0.08);
    color: var(--color-muted);
  }

  h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
  }

  p {
    margin: 0;
    color: var(--color-muted);
  }

  .project-link {
    color: var(--color-accent);
    font-weight: 600;
  }

  .project-link--disabled {
    opacity: 0.5;
    pointer-events: none;
  }
</style>
