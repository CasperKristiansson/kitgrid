---
import '../styles/global.css';
import DocsNavbar from '@kitgrid/docs-ui/components/DocsNavbar.astro';
import { project } from '../data/project';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  keywords?: string;
  structuredData?: Record<string, any>;
}

const {
  title = 'Project docs',
  description = 'Docs preview for kitgrid.',
  canonical,
  ogImage = '/assets/python-version-patch-pr-logo.png',
  keywords = 'cpython patch action, python version updates, github actions, security patches, automation',
  structuredData,
} = Astro.props;
const isProd = import.meta.env.PROD;
const siteOrigin = Astro.site?.origin ?? 'https://python-version-patch-pr.kitgrid.dev';
const derivedCanonical =
  canonical ?? new URL(Astro.url?.pathname ? Astro.url.pathname : '/', siteOrigin).href;
const resolvedOgImage = new URL(ogImage, siteOrigin).toString();
const defaultStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'CPython Patch PR Action',
  applicationCategory: 'DevOpsApplication',
  operatingSystem: 'GitHub Actions',
  url: derivedCanonical,
  description,
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
  },
};
const schemaToRender = structuredData ?? defaultStructuredData;
const theme = project.theme ?? {};
const themeCss = `
:root {
  --theme-primary: ${theme.primary ?? '#0B5FFF'};
  --theme-secondary: ${theme.secondary ?? '#1F2937'};
  --theme-bg: ${theme.bg ?? '#FFFFFF'};
  --theme-surface: ${theme.surface ?? '#F3F4F6'};
  --theme-text: ${theme.text ?? '#0F172A'};
  --theme-muted: ${theme.muted ?? '#6B7280'};
  --theme-link: ${theme.link ?? '#0B5FFF'};
  --theme-code: ${theme.code_theme === 'kitgrid-light' ? '#0F172A' : '#0F172A'};
  --motion-scale: ${theme.motion === 'subtle' ? '0.85' : '1'};
  --anim-duration: calc(220ms * var(--motion-scale));
}
`;

const csp = [
  "default-src 'self'",
  "script-src 'self' 'unsafe-inline' data: blob:",
  "style-src 'self' 'unsafe-inline'",
  "img-src 'self' data: https://img.shields.io",
  "font-src 'self' data:",
  "connect-src 'self'",
  "object-src 'none'",
  "base-uri 'self'",
  "form-action 'self'",
].join('; ');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0F172A" />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={derivedCanonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={derivedCanonical} />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="CPython Patch PR Action Docs" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={resolvedOgImage} />
    {isProd && <meta http-equiv="Content-Security-Policy" content={csp} />}
    {schemaToRender && (
      <script type="application/ld+json">
        {JSON.stringify(schemaToRender)}
      </script>
    )}
    <style is:inline>{themeCss}</style>
    <slot name="head" />
    <link rel="icon" type="image/png" sizes="128x128" href="/favicon.png" />
  </head>
  <body data-theme="python-version-patch-pr">
    <DocsNavbar
      title="CPython Patch PR Action"
      logoSrc="/assets/python-version-patch-pr-logo.png"
      logoAlt="CPython Patch PR Action logo"
      repoUrl="https://github.com/CasperKristiansson/python-version-patch-pr"
      links={[
        { label: 'Workflows', href: '/docs/workflows/' },
        { label: 'Configuration', href: '/docs/configuration/' },
        { label: 'Examples', href: '/docs/examples/' },
        { label: 'Troubleshooting', href: '/docs/troubleshooting/' },
      ]}
      searchRemoteSrc={import.meta.env.DEV ? 'https://python-version-patch-pr.kitgrid.dev/pagefind/pagefind.js' : undefined}
    />
    <main>
    <slot />
    </main>
  </body>
</html>
