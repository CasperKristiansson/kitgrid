---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Project docs', description = 'Docs preview for kitgrid.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body data-theme="docs-playground">
    <main>
      <slot />
    </main>
  </body>
</html>
