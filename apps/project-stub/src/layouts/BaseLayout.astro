---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Project docs', description = 'Docs preview for kitgrid.' } = Astro.props;

const csp = [
  "default-src 'self'",
  "script-src 'self'",
  "style-src 'self' 'unsafe-inline'",
  "img-src 'self' data:",
  "font-src 'self' data:",
  "connect-src 'self'",
  "object-src 'none'",
  "base-uri 'self'",
  "form-action 'self'",
  "frame-ancestors 'self'",
].join('; ');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta http-equiv="Content-Security-Policy" content={csp} />
  </head>
  <body data-theme="docs-playground">
    <main>
      <slot />
    </main>
  </body>
</html>
