{
  "name": "kitgrid",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo hosting the kitgrid hub and project doc sites.",
  "scripts": {
    "build": "pnpm -r build",
    "dev:hub": "pnpm --filter @kitgrid/hub dev",
    "dev:project-stub": "pnpm --filter @kitgrid/project-stub dev",
    "docs:fetch": "tsx scripts/fetch-docs.ts",
    "sidebar:demo": "tsx scripts/build-sidebar.ts",
    "build:sites": "tsx scripts/build-sites.ts",
    "package:sites": "tsx scripts/package-sites.ts",
    "deploy:paths": "tsx scripts/get-invalidation-paths.ts",
    "manifest:check": "tsx scripts/validate-manifest.ts",
    "lint": "pnpm --filter @kitgrid/hub lint",
    "format": "pnpm --filter @kitgrid/hub format:write",
    "format:check": "pnpm --filter @kitgrid/hub format:check",
    "typecheck": "tsc --noEmit && pnpm --filter @kitgrid/hub typecheck",
    "lint:links": "tsx scripts/check-links.ts",
    "lint:staged": "lint-staged"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.15.4"
  },
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "unist-util-visit": "^5.0.0",
    "@kitgrid/tsconfig": "workspace:*",
    "@types/cheerio": "^1.0.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.10.1",
    "@types/tar": "^6.1.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv": "^8.17.1",
    "cheerio": "^1.1.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.34.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mdx": "^2.3.4",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "execa": "^8.0.1",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "lint-staged": "^15.2.9",
    "pagefind": "^1.1.0",
    "prettier": "^3.3.3",
    "tar": "^6.2.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "yaml": "^2.6.0"
  }
}
