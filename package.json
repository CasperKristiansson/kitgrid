{
  "name": "kitgrid",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo hosting the kitgrid hub and project doc sites.",
  "scripts": {
    "build": "pnpm -r build",
    "dev:hub": "pnpm --filter @kitgrid/hub dev",
    "dev:project-stub": "pnpm --filter @kitgrid/project-stub dev",
    "lint": "pnpm --filter @kitgrid/hub lint",
    "format": "pnpm --filter @kitgrid/hub format:write",
    "format:check": "pnpm --filter @kitgrid/hub format:check",
    "typecheck": "pnpm --filter @kitgrid/hub typecheck"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.15.4"
  },
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
